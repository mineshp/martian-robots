{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node", // Add this line
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/tests/*"]
}
